<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Splide('.splide', {
      autoplay: false,
      interval: 3000,
      pauseOnHover: true,
      pauseOnFocus: false,

      fixedWidth: '289px',
      fixedHeight: '400px',

      gap: '20px',
      padding: '2.9rem',
      pagination: true,
      arrows: false,

      perMove: 2,
      perPage: 5,
      type: 'loop',
    }).mount();
    console.log("Splide mounted successfully.");
  });
</script>

<style>
  .splide {
    background: yellow;
    width: 100%;
    height: 562px;
  }

  .splide__track {
    overflow: hidden;
    touch-action: pan-y;
    width: 100%;
  }

  .splide h1 {
    text-align: center;
    background: red;
    margin-bottom: 28px;
  }

  .splide__list {
    padding: 0 1rem;
    display: flex;
  }

  .splide__slide {
    color: white;
    border: 2px solid black;
  }
  
  .splide__slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .splide__pagination {
    bottom: 10%;
    display: flex !important;
  }
  
  .splide__pagination__page {
    background: #E2E3E4;
    height: 10px;
    width: 26px;
    border-radius: 40px;
    opacity: 1;
    margin: 0 12px 0 0;
  }
  
  .splide__pagination__page.is-active {
    height: 10px;
    width: 50px;
    background: #00A7E1;
    transform: scale(1);
  }

</style>